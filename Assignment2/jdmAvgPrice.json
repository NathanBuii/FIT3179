{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1000,
  "height": 400,
  "title": "Price Distribution by JDM Manufacturer",
  "data": {
    "url": "https://raw.githubusercontent.com/NathanBuii/FIT3179/main/Assignment2/highest_avg.csv"
  },
  "params": [
    {
      "name": "Count_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1000,
        "step": 100,
        "name": "Minimum Number of Models: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year > 1980"},
    {"timeUnit": "year", "field": "Year", "as": "year"},
    {
      "window": [{"op": "mean", "field": "Price", "as": "Average_Price"}],
      "sort": [{"field": "Year", "order": "ascending"}],
      "ignorePeers": false,
      "frame": [null, 0]
    },
    {"filter": "datum.Count > Count_Above"}
  ],
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Manufacturer"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "x": {"timeUnit": "year", "field": "Year"},
        "y": {"field": "Price", "type": "quantitative"},
        "color": {
          "field": "Manufacturer",
          "type": "nominal",
          "scale": {
            "domain": [
              "Honda",
              "Acura",
              "Nissan",
              "Infiniti",
              "Toyota",
              "Lexus",
              "Mazda",
              "Mitsubishi",
              "Subaru"
            ],
            "range": [
              "#F14F04",
              "#FD9E72",
              "#CC0058",
              "#FF85BA",
              "#245501",
              "#AAD576",
              "#FFBE0B",
              "#FD0D21",
              "#2166ac"
            ]
          }
        },
        "size": {
          "field": "Count",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 100, 500, 1000],
            "range": [15, 50, 100, 300, 500]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.5},
          "value": 0
        },
        "tooltip": [
          {"field": "Manufacturer", "type": "nominal"},
          {"field": "Model", "type": "nominal"},
          {"field": "Year", "type": "temporal"},
          {
            "field": "Price",
            "type": "quantitative",
            "format": ".2f",
            "title": "Average Model Price"
          },
          {"field": "Count", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "Black"},
      "encoding": {
        "x": {"timeUnit": "year", "field": "Year", "title": "Model Year"},
        "y": {
          "field": "Average_Price",
          "type": "quantitative",
          "title": "Average Price ($USD)"
        }
      }
    }
  ],
  "config": {}
}